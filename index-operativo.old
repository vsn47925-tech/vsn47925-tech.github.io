    <script>
        // Variables globales
        let recognition = null;
        let currentCarouselIndex = 0;
        let carouselInterval = null;
        
        // Función para inicializar el reconocimiento de voz
        function initVoiceRecognition() {
            const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
            
            if (!SpeechRecognition) {
                alert("Tu navegador no soporta reconocimiento de voz. Por favor usa Chrome o Edge.");
                return null;
            }
            
            recognition = new SpeechRecognition();
            recognition.lang = 'es-ES';
            recognition.continuous = false;
            recognition.interimResults = false;
            
            recognition.onstart = function() {
                console.log("Reconocimiento de voz iniciado");
                updateStatus("Escuchando...", "bg-yellow-500");
                document.getElementById('startBtn').disabled = true;
                document.getElementById('stopBtn').disabled = false;
            };
            
            recognition.onresult = function(event) {
                const transcript = event.results[0][0].transcript;
                console.log("Pregunta detectada:", transcript);
                
                // Mostrar en el historial de chat
                addChatMessage(transcript, 'user');
                
                // Actualizar información de depuración
                document.getElementById('lastQuestion').textContent = transcript;
                
                // Enviar a n8n
                sendToN8N(transcript);
            };
            
            recognition.onerror = function(event) {
                console.error("Error en reconocimiento de voz:", event.error);
                updateStatus("Error en voz", "bg-red-500");
                document.getElementById('startBtn').disabled = false;
                document.getElementById('stopBtn').disabled = true;
            };
            
            recognition.onend = function() {
                console.log("Reconocimiento de voz finalizado");
                updateStatus("Listo para escuchar", "bg-green-500");
                document.getElementById('startBtn').disabled = false;
                document.getElementById('stopBtn').disabled = true;
            };
            
            return recognition;
        }
        
        // Función para enviar la consulta a n8n
        async function sendToN8N(pregunta) {
            console.log("Enviando a n8n...");
            updateStatus("Procesando...", "bg-blue-500");
            
            const endpoint = "https://apps.villaitue.cl/webhook-test/autoservicio";
            
            try {
                const response = await fetch(endpoint, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ pregunta: pregunta })
                });
                
                console.log("Respuesta HTTP:", response.status);
                document.getElementById('httpResponse').textContent = response.status;
                document.getElementById('httpResponse').className = response.status === 200 ? 
                    "ml-2 text-green-600 font-semibold" : "ml-2 text-red-600 font-semibold";
                
                const responseText = await response.text();
                console.log("Respuesta texto:", responseText);
                
                // Procesar la respuesta
                const processedData = processRespuetaN8N(responseText);
                console.log("Datos procesados finales:", processedData);
                
                // Mostrar en información de depuración
                document.getElementById('processedData').textContent = JSON.stringify(processedData, null, 2);
                
                // Mostrar la respuesta en la interfaz
                mostrarRespuestaAgente(processedData);
                
                // Actualizar estado
                updateStatus("Respuesta recibida", "bg-green-500");
                
                // Leer la respuesta en voz alta
                if (processedData[0] && processedData[0].output) {
                    leerTexto(processedData[0].output);
                }
                
            } catch (error) {
                console.error("Error al enviar a n8n:", error);
                updateStatus("Error en conexión", "bg-red-500");
                
                // Mostrar mensaje de error al usuario
                addChatMessage("Lo siento, hubo un error al procesar tu consulta. Por favor intenta nuevamente.", 'bot');
            }
        }
        
        // Función para procesar la respuesta de n8n
        function processRespuetaN8N(responseText) {
            try {
                // Verificar que la respuesta no esté vacía
                if (!responseText || responseText.trim() === '') {
                    throw new Error('Respuesta vacía del servidor');
                }
                
                // Parsear la respuesta JSON
                const data = JSON.parse(responseText);
                
                // Verificar que sea un array y tenga al menos un elemento
                if (!Array.isArray(data) || data.length === 0) {
                    throw new Error('Estructura de datos inesperada');
                }
                
                // Verificar estructura mínima esperada
                const firstItem = data[0];
                if (!firstItem.output || !firstItem.tipo_plantilla) {
                    throw new Error('Faltan campos obligatorios en la respuesta');
                }
                
                return data;
                
            } catch (error) {
                console.error('Error parseando respuesta n8n:', error);
                
                // Devolver una respuesta de error estructurada
                return [{
                    output: "Lo siento, hubo un error al procesar la información. Por favor intenta nuevamente.",
                    tipo_plantilla: "texto",
                    descripcion: "Error en el sistema",
                    imagenes: []
                }];
            }
        }
        
        // Función para mostrar la respuesta del agente en la interfaz
        function mostrarRespuestaAgente(datos) {
            // Ocultar estado inicial
            document.getElementById('initialState').classList.add('hidden');
            
            // Mostrar contenedor de respuesta
            const agentResponse = document.getElementById('agentResponse');
            agentResponse.classList.remove('hidden');
            agentResponse.classList.add('fade-in');
            
            // Obtener el primer elemento (asumimos que solo hay uno por ahora)
            const respuesta = datos[0];
            
            // Actualizar título de la página
            document.getElementById('responseTitle').textContent = respuesta.descripcion || "Resultado de la Consulta";
            
            // Mostrar descripción como título
            document.getElementById('descripcionTitle').textContent = respuesta.descripcion || "Disponibilidad";
            
            // Mostrar texto de salida
            document.getElementById('outputContent').textContent = respuesta.output;
            
            // Añadir mensaje al historial de chat
            addChatMessage(respuesta.output, 'bot');
            
            // Mostrar el tipo de plantilla correspondiente
            if (respuesta.tipo_plantilla === 'carrusel' && respuesta.imagenes && respuesta.imagenes.length > 0) {
                mostrarCarrusel(respuesta.imagenes);
            } else {
                // Si no es carrusel o no hay imágenes, ocultar el carrusel
                document.getElementById('carouselContainer').classList.add('hidden');
            }
        }
        
        // Función para mostrar el carrusel de imágenes
        function mostrarCarrusel(imagenes) {
            const carouselContainer = document.getElementById('carouselContainer');
            const carouselInner = carouselContainer.querySelector('.carousel-container');
            const dotsContainer = carouselContainer.querySelector('.carousel-dots');
            
            // Limpiar carrusel anterior
            carouselInner.innerHTML = '';
            dotsContainer.innerHTML = '';
            
            // Crear slides para cada imagen
            imagenes.forEach((imagen, index) => {
                // Crear slide
                const slide = document.createElement('div');
                slide.className = `carousel-slide ${index === 0 ? 'active' : ''}`;
                
                const img = document.createElement('img');
                img.src = imagen;
                img.alt = `Imagen ${index + 1} de la cabaña`;
                img.onerror = function() {
                    // Si falla la carga de la imagen, mostrar un placeholder
                    this.src = "https://via.placeholder.com/800x400/3b82f6/ffffff?text=Imagen+no+disponible";
                };
                
                slide.appendChild(img);
                carouselInner.appendChild(slide);
                
                // Crear punto de navegación
                const dot = document.createElement('div');
                dot.className = `carousel-dot ${index === 0 ? 'active' : ''}`;
                dot.dataset.index = index;
                dot.onclick = () => goToSlide(index);
                dotsContainer.appendChild(dot);
            });
            
            // Agregar botones de navegación si hay más de una imagen
            if (imagenes.length > 1) {
                // Botón anterior
                const prevBtn = document.createElement('button');
                prevBtn.className = 'carousel-btn carousel-prev';
                prevBtn.innerHTML = '<i class="fas fa-chevron-left"></i>';
                prevBtn.onclick = () => prevSlide();
                carouselInner.appendChild(prevBtn);
                
                // Botón siguiente
                const nextBtn = document.createElement('button');
                nextBtn.className = 'carousel-btn carousel-next';
                nextBtn.innerHTML = '<i class="fas fa-chevron-right"></i>';
                nextBtn.onclick = () => nextSlide();
                carouselInner.appendChild(nextBtn);
                
                // Iniciar autoplay
                startCarouselAutoPlay();
            }
            
            // Mostrar el carrusel
            carouselContainer.classList.remove('hidden');
        }
        
        // Funciones para controlar el carrusel
        function goToSlide(index) {
            const slides = document.querySelectorAll('.carousel-slide');
            const dots = document.querySelectorAll('.carousel-dot');
            
            // Remover clase active de todos
            slides.forEach(slide => slide.classList.remove('active'));
            dots.forEach(dot => dot.classList.remove('active'));
            
            // Agregar clase active al slide y dot seleccionado
            slides[index].classList.add('active');
            dots[index].classList.add('active');
            
            currentCarouselIndex = index;
            
            // Reiniciar autoplay
            restartCarouselAutoPlay();
        }
        
        function nextSlide() {
            const slides = document.querySelectorAll('.carousel-slide');
            const nextIndex = (currentCarouselIndex + 1) % slides.length;
            goToSlide(nextIndex);
        }
        
        function prevSlide() {
            const slides = document.querySelectorAll('.carousel-slide');
            const prevIndex = (currentCarouselIndex - 1 + slides.length) % slides.length;
            goToSlide(prevIndex);
        }
        
        function startCarouselAutoPlay() {
            // Cambiar slide cada 5 segundos
            carouselInterval = setInterval(nextSlide, 5000);
        }
        
        function restartCarouselAutoPlay() {
            if (carouselInterval) {
                clearInterval(carouselInterval);
            }
            startCarouselAutoPlay();
        }
        
        // Función para leer texto en voz alta
        function leerTexto(texto) {
            if ('speechSynthesis' in window) {
                const utterance = new SpeechSynthesisUtterance(texto);
                utterance.lang = 'es-ES';
                utterance.rate = 1.0;
                utterance.pitch = 1.0;
                
                // Buscar una voz en español
                const voices = speechSynthesis.getVoices();
                const spanishVoice = voices.find(voice => voice.lang.startsWith('es'));
                
                if (spanishVoice) {
                    utterance.voice = spanishVoice;
                }
                
                speechSynthesis.speak(utterance);
            }
        }
        
        // Función para añadir mensajes al historial de chat
        function addChatMessage(mensaje, tipo) {
            const chatHistory = document.getElementById('chatHistory');
            const messageDiv = document.createElement('div');
            
            messageDiv.className = tipo === 'user' ? 'user-message p-3' : 'bot-message p-3';
            messageDiv.innerHTML = `<p>${mensaje}</p>`;
            
            chatHistory.appendChild(messageDiv);
            
            // Hacer scroll al final del historial
            chatHistory.scrollTop = chatHistory.scrollHeight;
        }
        
        // Función para actualizar el estado del sistema
        function updateStatus(texto, colorClase) {
            const indicator = document.getElementById('statusIndicator');
            const statusText = document.getElementById('statusText');
            
            // Remover todas las clases de color
            indicator.classList.remove('bg-green-500', 'bg-yellow-500', 'bg-red-500', 'bg-blue-500');
            
            // Agregar la nueva clase de color
            indicator.classList.add(colorClase);
            
            // Actualizar texto
            statusText.textContent = texto;
        }
        
        // Inicialización cuando se carga la página
        document.addEventListener('DOMContentLoaded', function() {
            console.log("Sistema de voz Villaitue iniciado");
            
            // Obtener y mostrar el número de voces disponibles
            if ('speechSynthesis' in window) {
                // Esperar a que las voces se carguen
                setTimeout(() => {
                    const voices = speechSynthesis.getVoices();
                    document.getElementById('voicesCount').textContent = voices.filter(v => v.lang.startsWith('es')).length || voices.length;
                }, 500);
            }
            
            // Inicializar reconocimiento de voz
            recognition = initVoiceRecognition();
            
            // Configurar botones
            document.getElementById('startBtn').addEventListener('click', function() {
                if (recognition) {
                    recognition.start();
                }
            });
            
            document.getElementById('stopBtn').addEventListener('click', function() {
                if (recognition) {
                    recognition.stop();
                }
            });
            
            // Inicializar con el botón de detener deshabilitado
            document.getElementById('stopBtn').disabled = true;
            
            // Mostrar información inicial en el panel de depuración
            document.getElementById('processedData').textContent = 'Esperando consulta...';
        });
    </script>
